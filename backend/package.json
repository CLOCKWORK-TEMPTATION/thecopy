{
  "name": "@the-copy/backend",
  "version": "1.0.0",
  "description": "Backend API for The Copy - Drama Analysis Platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsc-watch --project tsconfig.build.json --onSuccess \"node dist/server.js\"",
    "dev:mcp": "tsx watch src/mcp-server.ts",
    "mcp": "tsx src/mcp-server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:mongodb": "tsx scripts/test-mongodb-connection.ts",
    "lint": "eslint src --ext .ts --max-warnings=0",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "perf:setup": "bash db-performance-analysis/setup-database.sh",
    "perf:seed": "tsx db-performance-analysis/seed-test-data.ts",
    "perf:baseline": "tsx db-performance-analysis/run-performance-analysis.ts baseline",
    "perf:apply-indexes": "bash db-performance-analysis/apply-indexes.sh",
    "perf:post-optimization": "tsx db-performance-analysis/run-performance-analysis.ts post-optimization",
    "perf:compare": "tsx db-performance-analysis/compare-results.ts",
    "logs:sanitize": "tsx scripts/sanitize-historical-logs.ts",
    "logs:sanitize:dry-run": "DRY_RUN=true tsx scripts/sanitize-historical-logs.ts"
  },
  "keywords": [
    "drama",
    "analysis",
    "ai",
    "arabic",
    "screenplay"
  ],
  "author": "The Copy Team",
  "license": "MIT",
  "dependencies": {
    "@bull-board/api": "^6.14.2",
    "@bull-board/express": "^6.14.2",
    "@bull-board/ui": "^6.14.2",
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@neondatabase/serverless": "^1.0.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.3",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/instrumentation-fetch": "^0.208.0",
    "@opentelemetry/instrumentation-xml-http-request": "^0.208.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/sdk-trace-web": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@sentry/node": "^10.32.1",
    "@sentry/profiling-node": "^10.32.1",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.66.2",
    "compression": "^1.7.4",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.7",
    "drizzle-orm": "^0.45.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.7.0",
    "module-alias": "^2.2.3",
    "mongodb": "^7.0.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.12",
    "otplib": "^12.0.1",
    "pdfjs-dist": "^5.4.394",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "redis": "^5.10.0",
    "socket.io": "^4.8.3",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/csurf": "^1.11.5",
    "@types/express": "^5.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.4",
    "@types/qrcode": "^1.5.6",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "^4.0.10",
    "eslint": "^9.17.0",
    "supertest": "^7.1.3",
    "tsc-watch": "^7.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.10",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": "20.x"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "overrides": {
    "esbuild": "^0.25.0"
  }
}
